# application.yml (src/main/resources/application.yml)
server:
  port: 8080
spring:
  datasource:
    url: jdbc:h2:mem:socialdb;DB_CLOSE_DELAY=-1
    driverClassName: org.h2.Driver
    username: sa
    password: ""
  jpa:
    hibernate:
      ddl-auto: update
    properties:
      hibernate:
        format_sql: true
  thymeleaf:
    cache: false
app:
  upload-dir: uploads

